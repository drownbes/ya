doctype html
html
	head
		meta(charset="utf-8")
		meta(name="viewport",content="width=device-width")
		title Ya Zabil
		//bower:css
		//endbower
		link(rel="stylesheet", href="css/clndr.css")
		script(id="clndr-template", type="text/template")
			.clndr-controlls
				.clndr-previous-button
					| prev
				.month!='<%= month %>'
				.year!='<%= year %>'
				.clndr-next-button
					| next
			.clndr-grid
				.days-of-the-week
					.days-header
						!='<% _.each(daysOfTheWeek, function(day) { %>'
						.header-day
							div
								!='<%= day %>'
						!='<% }); %>'
					.days
						!='<% _.each(days, function(day) { %>'
						div(class!="<%= day.classes %>")
							div
								!='<%= day.day %>'
						!='<% }); %>'
	body
		#container
		//bower:js
		script(src='../bower_components/jquery/dist/jquery.js')
		script(src='../bower_components/moment/min/moment-with-locales.js')
		script(src='../bower_components/clndr/clndr.min.js')
		script(src='../bower_components/underscore/underscore.js')
		script(src='../bower_components/angular/angular.js')
		script(src='../bower_components/angular-clndr/tien-clndr.js')
		//endbower
		script(src='js/app.js')

